{
  "name": "poke-api-kniekb",
  "private": true,
  "version": "0.0.2",
  "description": "Your assignment is to create a Pok√©mon API from a CSV file using Node and Express.",
  "author": "Dragos Rotaru <dragos@rotaru.co>",
  "license": "GNU GPL V3",
  "main": "build/index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "npm run build && node -r dotenv/config build/index.js",
    "build": "npx tsc",
    "test": "npx jest"
  },
  "repository": {
    "type": "git",
    "url": "https://qualio-kniekb@git.codesubmit.io/qualio/poke-api-kniekb"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "tslint": {
    "defaultSeverity": "error",
    "extends": [
      "tslint:recommended",
      "tslint-jest",
      "tslint-config-prettier"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.13",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.6.4",
    "dotenv": "^8.2.0",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-jest": "^1.0.5",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "express": "^4.17.1",
    "fast-csv": "^4.3.2",
    "morgan": "^1.10.0"
  }
}
